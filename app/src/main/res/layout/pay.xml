<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity">


   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintTop_toTopOf="parent">

      <TextView
          android:id="@+id/textView"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:textSize="25sp"
          android:gravity="center"
          android:layout_marginTop="50dp"
          android:textColor="#DF673647"
          android:text="შეიყვანეთ მონაცემები" />

      <EditText
          android:id="@+id/name"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:layout_marginTop="40dp"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:inputType="textPersonName"
          android:hint="სახელი და გვარი"
          />

      <EditText
          android:id="@+id/number"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:ems="10"
          android:inputType="number"
          android:layout_marginTop="10dp"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:digits="1234567890"
          android:maxLength="16"
          android:hint="ბარათის 16 ნიშნა ნომერი" />

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal">
         <TextView
             android:id="@+id/textView2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:text="CVV:"
             android:textColor="@color/black"
             android:layout_marginStart="20dp"
             android:textSize="20sp"/>

         <EditText
             android:id="@+id/cvv"
             android:layout_width="76dp"
             android:layout_height="wrap_content"
             android:ems="10"
             android:digits="0123456789"
             android:layout_marginStart="5dp"
             android:maxLength="3"
             android:inputType="number" />
      </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
       android:orientation="horizontal">

      <TextView
          android:id="@+id/textView4"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="შეიყვანეთ თანხა:"
          android:layout_marginStart="20dp"
          android:layout_marginEnd="20dp"
          android:textSize="20sp"
          android:textColor="@color/black"/>
      <EditText
          android:id="@+id/Tanxa"
          android:layout_width="76dp"
          android:layout_height="wrap_content"
          android:ems="10"
          android:digits="0123456789"
          android:layout_marginStart="5dp"
          android:maxLength="3"
          android:inputType="number" />

      <TextView
          android:id="@+id/textView5"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="GEL"
          android:layout_marginStart="5dp"
          android:layout_marginTop="10dp"
          android:textSize="20sp"/>

   </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="vertical">
         <TextView
             android:id="@+id/textView6"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="შეიყვანეთ თაიგულის სახელი:"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
             android:textSize="20sp"
             android:textColor="@color/black"/>

         <EditText
             android:id="@+id/saxeli"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp" />

      </LinearLayout>
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="10dp"
          android:orientation="vertical">
         <TextView
             android:id="@+id/textView7"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="შეიყვანეთ მისამართი:"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp"
             android:textSize="20sp"
             android:textColor="@color/black"/>

         <EditText
             android:id="@+id/misamarti"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:ems="10"
             android:inputType="textPersonName"
             android:layout_marginStart="20dp"
             android:layout_marginEnd="20dp" />

      </LinearLayout>

      <Button
          android:id="@+id/gadaricxva"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:text="გადარიცხვა"
          android:background="@drawable/button"
          android:elevation="6dp"/>
      <Button
          android:id="@+id/back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginTop="20dp"
          android:text="უკან"
          android:background="@drawable/button"
          android:elevation="6dp"/>
   </LinearLayout>
</ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>